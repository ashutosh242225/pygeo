---
# pygeoapi configuration

server:
  bind:
    host: 0.0.0.0
    port: 5000
  url: http://localhost:5000
  name: pygeoapi Local Server
  page_limit: 10

resources:
  features:
    type: feature
    title: Local GeoJSON Data
    description: GeoJSON data served by pygeoapi
    provider:
      name: GeoJSON
      data: ./data/places.geojson
      id_field: id
    links:
      - type: text/html
        rel: canonical
        title: Documentation
        href: http://localhost:5000

metadata:
  identification:
    title: My Local pygeoapi
    abstract: A basic implementation of pygeoapi serving local GeoJSON data
    keywords:
      - OGC
      - GeoJSON
      - pygeoapi
    fees: none
    access_constraints: none

# Configured plugins
plugins:
  process:
  - provider: hello_world
  provider:
  - type: feature
    name: GeoJSON
    data: ./data/places.geojson
    id_field: id

  process:
  - provider: hello_world  # Example process
  - type: feature
    name: GeoJSON
    data: ./data/places.geojson
    id_field: id
  - type: feature
    name: BufferProcess  # Your custom process
    description: Generates a buffer around features
    data: ./data/places.geojson
    id_field: id
